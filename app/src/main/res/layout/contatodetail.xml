<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tx_label_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-bold"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:text="Nome"/>

        <TextView
            android:id="@+id/tx_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-bold"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tx_label_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-bold"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:text="Telefone"/>

        <TextView
            android:id="@+id/tx_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-bold"
            android:textColor="@color/white"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tx_label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-bold"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:text="Email"/>

        <TextView
            android:id="@+id/tx_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:fontFamily="sans-serif-bold"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tx_label_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-bold"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:text="EndereÃ§o"/>

        <TextView
            android:id="@+id/tx_endereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:fontFamily="sans-serif-bold"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>
</ScrollView>